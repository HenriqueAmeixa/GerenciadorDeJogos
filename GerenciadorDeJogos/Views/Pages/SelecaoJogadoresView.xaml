<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GerenciadorDeJogos.Views.Pages.SelecaoJogadoresView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Seleção de Jogadores"
    BackgroundColor="White">

    <VerticalStackLayout Padding="20">

        <!--  Título  -->
        <Label
            FontAttributes="Bold"
            FontSize="22"
            HorizontalOptions="Center"
            Text="Selecione até 6 jogadores" />

        <!--  Lista de Jogadores Disponíveis  -->
        <Label
            Margin="0,10,0,5"
            FontAttributes="Bold"
            FontSize="18"
            Text="Jogadores Disponíveis" />
        <ListView ItemsSource="{Binding JogadoresDisponiveis}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal">
                            <Label Text="{Binding Nome}" VerticalOptions="Center" />
                            <Button
                                Command="{Binding Source={x:Reference SelecaoJogadoresPage}, Path=BindingContext.SelecionarJogadorCommand}"
                                CommandParameter="{Binding .}"
                                HorizontalOptions="EndAndExpand"
                                Text="+" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--  Lista de Jogadores Selecionados  -->
        <Label
            Margin="0,10,0,5"
            FontAttributes="Bold"
            FontSize="18"
            Text="Jogadores Selecionados" />
        <ListView ItemsSource="{Binding JogadoresSelecionados}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal">
                            <Label Text="{Binding Nome}" VerticalOptions="Center" />
                            <Button
                                Command="{Binding Source={x:Reference SelecaoJogadoresPage}, Path=BindingContext.RemoverJogadorCommand}"
                                CommandParameter="{Binding .}"
                                HorizontalOptions="EndAndExpand"
                                Text="X"
                                TextColor="Red" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--  Botão para Avançar  -->
        <Button
            Margin="0,20,0,0"
            BackgroundColor="Blue"
            Command="{Binding AvancarParaSorteioCommand}"
            FontSize="18"
            IsEnabled="{Binding PodeAvancar}"
            Text="Avançar para Sorteio"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
