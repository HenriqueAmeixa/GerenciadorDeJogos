<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GerenciadorDeJogos.Views.Pages.SorteioTimesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:GerenciadorDeJogos.ViewModels"
    Title="Sorteio de Times">

    <ContentPage.BindingContext>
        <vm:SorteioTimesViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="10" RowDefinitions="Auto,*,Auto,*,Auto,*,Auto,Auto">

        <Label
            Grid.Row="0"
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="Jogadores Selecionados" />

        <ScrollView Grid.Row="1">
            <ListView ItemsSource="{Binding JogadoresSelecionados}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal">
                                <Label Text="{Binding Apelido}" VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>

        <Button
            Grid.Row="2"
            Command="{Binding SortearTimesCommand}"
            HorizontalOptions="Fill"
            Text="Sortear Times" />

        <Label
            Grid.Row="3"
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="Time 1" />

        <ScrollView Grid.Row="4">
            <ListView ItemsSource="{Binding Time1.Jogadores}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal">
                                <Label Text="{Binding Apelido}" VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>

        <Label
            Grid.Row="5"
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="Time 2" />

        <ScrollView Grid.Row="6">
            <ListView ItemsSource="{Binding Time2.Jogadores}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal">
                                <Label Text="{Binding Apelido}" VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>

        <Button
            Grid.Row="7"
            Command="{Binding IrParaPartidaCommand}"
            HorizontalOptions="Fill"
            Text="Ir para Partida" />

    </Grid>
</ContentPage>
